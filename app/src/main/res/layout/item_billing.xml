<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/half"
    android:layout_marginVertical="@dimen/quarter"
    app:cardBackgroundColor="@color/header_bg"
    app:cardCornerRadius="@dimen/quarter"
    app:cardElevation="@dimen/quarter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/full_xl"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/half"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/full_xxl"
            android:paddingHorizontal="@dimen/full"
            android:paddingVertical="@dimen/half"
            android:textColor="@color/textDarkPrimary"
            android:textSize="@dimen/text_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="google play games" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/full_xl"
            android:layout_marginTop="@dimen/half"
            android:background="@drawable/right_rounded_filled_primary"
            android:minWidth="100dp"
            android:paddingHorizontal="@dimen/full"
            android:paddingVertical="@dimen/half"
            android:textColor="@color/textLightPrimary"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            tools:text="Debit" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/full"

            android:paddingHorizontal="@dimen/full"
            android:textColor="@color/textDarkSecondary"
            android:textSize="@dimen/text_body_2"
            app:layout_constraintEnd_toStartOf="@+id/tvPrice"
            app:layout_constraintStart_toEndOf="@+id/v1"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="2022-09-13T07:27:39.053Z" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/full_xl"
            android:layout_marginTop="@dimen/half"

            android:background="@drawable/left_rounded_filled_price"
            android:minWidth="100dp"
            android:paddingHorizontal="@dimen/full"
            android:paddingVertical="@dimen/half"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_header"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            tools:text="1200 /-" />

        <View
            android:id="@+id/v2"
            android:layout_width="@dimen/full_xl"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


